<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invoiceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F8"
    android:clickable="false"
    android:orientation="vertical">

    <!--        make scroll of below the app bar   app:layout_scrollFlags="scroll|enterAlways"-->


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/invoiceAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/back_save_fortoolbar" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:foregroundGravity="center"
       android:layout_marginVertical="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoiceAppbar">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            >

            <TextView
                android:id="@+id/tv_clientName"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"

                android:gravity="start"
                android:labelFor="@+id/add_item_name"
                android:text="@string/invoice_number" />

            <EditText
                android:id="@+id/add_item_invoicenumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:background="@drawable/entrybox"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_add_creationDate"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/add_item_invoicenumber"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"

                android:gravity="start"
                android:labelFor="@id/add_item_quantity"
                android:text="@string/creation_date_time" />

            <LinearLayout
                android:id="@+id/add_creationDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_add_creationDate"
                android:layout_marginTop="0dp"
                android:background="@drawable/entrybox"

                android:orientation="horizontal">

                <DatePicker
                    android:id="@+id/pickcreationDate"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/baseline_edit_calendar_24"
                    android:foreground="@color/lightAqua" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_dueterms"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/add_creationDate"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"

                android:gravity="start"
                android:labelFor="@id/add_spinnerterms"
                android:text="Due Terms" />

            <Spinner
                android:id="@+id/add_spinnerterms"
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_dueterms"
                android:alpha="0.8"
                android:spinnerMode="dropdown"
                android:foreground="@color/lightAqua"
                android:dropDownSelector="@drawable/baseline_arrow_drop_down_24"



                />

            <TextView
                android:id="@+id/tv_invoiceTitle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/add_spinnerterms"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"

                android:gravity="start"
                android:labelFor="@id/add_edt_invoice_title"
                android:text="@string/invoice_title" />

            <EditText
                android:id="@+id/add_edt_invoice_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_invoiceTitle"
                android:background="@drawable/entrybox"
                android:inputType="textCapSentences"
                android:padding="10dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>