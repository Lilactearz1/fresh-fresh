<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainLandingPage"
 tools:showIn="@layout/activity_archives"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/archivecad1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                android:background="@drawable/shadow"
              >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">


                    <TextView

                        android:id="@+id/tvEstimateTitle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|start"
                        android:gravity="left|center"
                        android:labelFor="@id/archivecad1"
                        android:paddingLeft="10dp"
                        android:text="ESTIMATE FOR  CP INSTALLATION"
                        android:textColor="@color/dark_blue2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:id="@+id/tvCustomerName"
                            android:paddingLeft="10dp"
                            android:textColor="@color/dark_blue2"
                            android:gravity="left|bottom"
                            android:labelFor="@id/archivecad1"
                            android:text="Client: Zacch Opondo" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="16dp"
                            android:id="@+id/tvEstimateDate"
                            android:paddingLeft="10dp"
                            android:textColor="@color/dark_blue2"
                            android:gravity="left|bottom"
                            android:labelFor="@id/archivecad1"
                            android:text="Date:11/05/25" />
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:dropDownSelector="@drawable/baseline_arrow_drop_down_24"
                            />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="10dp"/>


        </LinearLayout>








</androidx.core.widget.NestedScrollView>