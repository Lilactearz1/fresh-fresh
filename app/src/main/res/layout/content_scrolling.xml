<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainLandingPage"

  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/archivecad1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shadow"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView

                    android:id="@+id/tvEstimateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|start"
                    android:fontFamily="@font/gerhana"
                    android:gravity="left|center"
                    android:labelFor="@id/archivecad1"
                    android:paddingLeft="10dp"
                    android:text="ESTIMATE FOR  CP INSTALLATION"
                    android:textColor="@color/dark_blue2" />

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gerhana"
                    android:layout_marginStart="15dp"
                    android:text="Client: Zacch Opondo"
                    android:textColor="@color/dark_blue2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvEstimateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/gerhana"
                        android:layout_marginStart="15dp"
                        android:gravity="left|bottom"
                        android:labelFor="@id/archivecad1"

                        android:text="Date:11/05/25"
                        android:textColor="@color/dark_blue2" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/tvDuedate"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="16dp"
                        android:gravity="left|bottom"
                        android:labelFor="@id/archivecad1"
                        android:fontFamily="@font/gerhana"
                        android:paddingLeft="0dp"
                        android:text="Due:11-14-25"
                        android:textColor="@color/dark_blue2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:clipChildren="true"
                        android:background="@drawable/shadow"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerMark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:gravity="center|center_vertical"
                            android:textAlignment="gravity" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/transparent" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>