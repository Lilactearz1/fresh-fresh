<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F5F8"
    android:orientation="vertical"
    android:id="@+id/invoiceLayout"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/invoiceAppbar"
        android:layout_height="62dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <!--        make scroll of below the app bar   app:layout_scrollFlags="scroll|enterAlways"-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/addAppbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/invoice_info"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
             app:titleMarginStart="120dp"
            app:title="@string/invoice_info"
            app:titleTextColor="@color/white"
            android:background="@color/blue"
            android:orientation="vertical"
            android:titleTextColor="@color/white"

            app:layout_constraintTop_toTopOf="@id/invoiceLayout"
            app:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="-54dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invoiceAppbar"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            >

            <TextView
                android:id="@+id/tv_clientName"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"

                android:gravity="start"
                android:labelFor="@+id/add_item_name"
                android:text="@string/invoice_number" />

            <EditText
                android:id="@+id/add_item_invoicenumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:background="@drawable/entrybox"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_add_creationDate"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/add_item_invoicenumber"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"

                android:gravity="start"
                android:labelFor="@id/add_item_quantity"
                android:text="@string/creation_date_time" />

            <EditText
                android:id="@+id/add_creationDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_add_creationDate"
                android:background="@drawable/entrybox"
                android:drawableEnd="@drawable/baseline_edit_calendar_24"
                android:inputType="date"


                android:padding="10dp" />

            <TextView
                android:id="@+id/add_dueterms"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/add_creationDate"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"

                android:gravity="start"
                android:labelFor="@id/add_spinnerterms"
                android:text="Due Terms" />

            <Spinner
                android:id="@+id/add_spinnerterms"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/add_dueterms"
                android:alpha="0.8"

                android:dropDownSelector="@drawable/baseline_arrow_drop_down_24"
                android:foregroundTintMode="src_in"
                android:inputType="number"
                android:padding="10dp"

                />

            <TextView
                android:id="@+id/tv_invoiceTitle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/add_spinnerterms"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"

                android:gravity="start"
                android:labelFor="@id/add_edt_invoice_title"
                android:text="@string/invoice_title" />

            <EditText
                android:id="@+id/add_edt_invoice_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_invoiceTitle"
                android:background="@drawable/entrybox"
                android:inputType="textCapSentences"
                android:padding="10dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>