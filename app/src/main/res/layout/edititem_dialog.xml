<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel1dialog"
        android:layout_width="match_parent"
        android:layout_height="470dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_edit_namedialog"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"

            android:gravity="start"
            android:labelFor="@+id/edit_item_namedialog"
            android:text="@string/ent_itemName" />

        <EditText
            android:id="@+id/edit_item_namedialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="48dp"
            android:background="@drawable/entrybox"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_edit_qtydialog"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/edit_item_namedialog"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"

            android:gravity="start"
            android:labelFor="@id/edit_item_quantity"
            android:text="Item Quantity" />

        <EditText
            android:id="@+id/edit_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_edit_qtydialog"
            android:background="@drawable/entrybox"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_edit_pricedialog"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/edit_item_quantity"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"

            android:gravity="start"
            android:labelFor="@id/edit_item_pricedialog"
            android:text="Item Price" />

        <EditText
            android:id="@+id/edit_item_pricedialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_edit_pricedialog"
            android:background="@drawable/entrybox"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_edit_taxRatedialog"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/edit_item_pricedialog"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"

            android:gravity="start"
            android:labelFor="@id/edit_item_taxRatedialog"
            android:text="Tax Rate %" />

        <EditText
            android:id="@+id/edit_item_taxRatedialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_edit_taxRatedialog"
            android:background="@drawable/entrybox"
            android:inputType="number"
            android:padding="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/dark_blue2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/dialogcancelbtn"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/dark_blue2"

                    android:labelFor="@id/updatedialog"
                    android:padding="10dp"
                    android:text="Cancel"
                    />

                <Button
                    android:id="@+id/updatedialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="15dp"

                    android:autoSizeTextType="uniform"

                    android:padding="10dp"
                    android:text="update"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_blue2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>