<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/space"
            android:layout_marginBottom="10dp"
            android:background="@color/emerald">

            <include layout="@layout/back_save_forclienttoolbar" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel1dialog"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/queen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_edit_namedialog"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"

                android:gravity="start"
                android:labelFor="@+id/edit_item_namedialog"
                android:text="@string/ent_itemName" />

            <EditText
                android:id="@+id/edit_item_namedialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:background="@drawable/entrybox"
                android:inputType="text"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_edit_qtydialog"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/edit_item_namedialog"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/queen"
                android:gravity="start"
                android:labelFor="@id/edit_item_quantity"
                android:text="Item Quantity" />

            <EditText
                android:id="@+id/edit_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_edit_qtydialog"
                android:background="@drawable/entrybox"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_edit_pricedialog"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/edit_item_quantity"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/queen"
                android:gravity="start"
                android:labelFor="@id/edit_item_pricedialog"
                android:text="Item Price" />

            <EditText
                android:id="@+id/edit_item_pricedialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_edit_pricedialog"
                android:background="@drawable/entrybox"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_edit_taxRatedialog"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@+id/edit_item_pricedialog"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/queen"
                android:gravity="start"
                android:labelFor="@id/edit_item_taxRatedialog"
                android:text="Tax Rate %" />

            <EditText
                android:id="@+id/edit_item_taxRatedialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_edit_taxRatedialog"
                android:background="@drawable/entrybox"
                android:inputType="number"
                android:padding="10dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                >
                <include layout="@layout/amountdisplay"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>