<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F8"
    android:orientation="vertical">


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_blue2"
        android:gravity="center"
        android:text="back"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/innerrelLayout"
        app:layout_constraintVertical_bias="0.276" />

    <Button

        android:id="@+id/btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_blue2"
        android:gravity="center"
        android:text="save"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/innerrelLayout"
        app:layout_constraintVertical_bias="0.276" />

    <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/addItemLayout">

            <ImageButton
                android:id="@+id/backimagebtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/baseline_arrow_back_24"
                android:clickable="true"
                android:layout_marginStart="20dp"
                android:padding="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="95dp"
                android:paddingTop="10dp"
                android:text="@string/add_item"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/saveimagebtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/baseline_add_task_24"
                android:clickable="true"
                />
        </LinearLayout>



    <RelativeLayout
        android:id="@+id/innerrelLayout"

        android:layout_width="0dp"
        android:layout_height="445dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="450dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="32dp"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_add_name"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"

                    android:gravity="start"
                    android:labelFor="@+id/add_item_name"
                    android:text="@string/ent_itemName" />

                <EditText
                    android:id="@+id/add_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="49dp"
                    android:background="@drawable/entrybox"
                    android:inputType="text"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_add_qty"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/add_item_name"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"

                    android:gravity="start"
                    android:labelFor="@id/add_item_quantity"
                    android:text="@string/item_quantity" />

                <EditText
                    android:id="@+id/add_item_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_add_qty"
                    android:background="@drawable/entrybox"
                    android:inputType="number"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_add_price"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/add_item_quantity"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"

                    android:gravity="start"
                    android:labelFor="@id/add_item_price"
                    android:text="@string/item_price" />

                <EditText
                    android:id="@+id/add_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_add_price"
                    android:background="@drawable/entrybox"
                    android:inputType="number"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_add_taxRate"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/add_item_price"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"

                    android:gravity="start"
                    android:labelFor="@id/add_item_taxRate"
                    android:text="@string/tax_rate" />

                <EditText
                    android:id="@+id/add_item_taxRate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_add_taxRate"
                    android:background="@drawable/entrybox"
                    android:inputType="number"
                    android:padding="10dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@color/dark_blue2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"

                            android:labelFor="@id/tv_add_item_AmountScreen"
                            android:padding="10dp"
                            android:text="@string/amount"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_add_item_AmountScreen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="15dp"
                            android:autoSizeTextType="uniform"

                            android:padding="10dp"
                            android:text="@string/add_itemAmountscreen"
                            android:textAlignment="textEnd"

                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91727495" />


</androidx.constraintlayout.widget.ConstraintLayout>