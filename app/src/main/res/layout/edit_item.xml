<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F5F8"
    android:orientation="vertical"
    android:id="@+id/editItemLayout"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editAppbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="@color/blue"
        android:orientation="vertical"
        android:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/editItemLayout"
        app:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="-54dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
             android:paddingTop="10dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:clickable="true"
            android:padding="10dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="Edit item"
            android:textColor="@color/white"
            android:layout_marginStart="85dp"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="110dp"
            android:background="@drawable/baseline_add_task_24"
            android:clickable="true"
            android:padding="10dp" />
    </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="450dp"
        android:foregroundGravity="center"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="105dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rel1">

            <TextView
                android:id="@+id/tv_edit_name"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:gravity="start"
                android:labelFor="@+id/edit_item_name"
                android:text="@string/ent_itemName"
               />

            <EditText
                android:id="@+id/edit_item_name"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:background="@drawable/entrybox"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_edit_qty"
                android:layout_below="@+id/edit_item_name"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:labelFor="@id/edit_item_quantity"
                android:gravity="start"
                android:text="Item Quantity"
                 />

            <EditText
                android:id="@+id/edit_item_quantity"
                android:layout_below="@+id/tv_edit_qty"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/entrybox"
                />

            <TextView
                android:id="@+id/tv_edit_price"
                android:layout_below="@+id/edit_item_quantity"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:labelFor="@id/edit_item_price"
                android:gravity="start"
                android:text="Item Price"
                 />

            <EditText
                android:id="@+id/edit_item_price"
                android:layout_below="@+id/tv_edit_price"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/entrybox"
                />

            <TextView
                android:id="@+id/tv_edit_taxRate"
                android:layout_below="@+id/edit_item_price"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:labelFor="@id/edit_item_taxRate"
                android:gravity="start"
                android:text="Tax Rate %"
                 />

            <EditText
                android:id="@+id/edit_item_taxRate"
                android:layout_below="@+id/tv_edit_taxRate"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/entrybox"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/dark_blue2"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:labelFor="@id/tv_edit_item_AmountScreen"
                        android:padding="10dp"
                       />

                    <TextView
                        android:id="@+id/tv_edit_item_AmountScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="90dp"

                        android:textAlignment="textEnd"
                        android:padding="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="KSH:1,000,000.00 "

                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>