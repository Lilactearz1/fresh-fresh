<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="horizontal"
    android:layout_height="60dp">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/preview"
        android:layout_width="150dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/shadow"
        android:gravity="bottom|center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_preview_24"
            android:backgroundTint="@color/dark_blue2">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:textColor="@color/dark_blue2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Download"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/shadow"
        android:gravity="bottom|center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/preview">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/Downloadrelative"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_download_for_offline_24"
            android:backgroundTint="@color/dark_blue2">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:textColor="@color/dark_blue2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>