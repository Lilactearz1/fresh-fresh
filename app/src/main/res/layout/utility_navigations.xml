<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/utilityNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/latobold"
                android:id="@+id/totalKsh1"
                android:text="Ksh: 0.00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/gerhana"
                android:text="Verified"
                android:textColor="@color/berry"
                android:textSize="14sp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="Nelly Ochieng"
                android:id="@+id/name1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:id="@+id/dueDate1"
                android:fontFamily="@font/latobold"
                android:text="Due date: 29-09-2025" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/blue_ncs"
                android:gravity="center_horizontal|center"
                android:text="Share"
                android:id="@+id/sharebtn1"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:icon="@drawable/share"
                app:iconGravity="textStart">

            </com.google.android.material.button.MaterialButton>

        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0"
            android:alignmentMode="alignMargins"
            android:animateLayoutChanges="true"
            android:columnCount="4"
            android:columnOrderPreserved="true"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/Download1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_arrow_drop_down_24" />

            <ImageView
                android:id="@+id/edit1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_edit_24"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/print1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"

                android:src="@drawable/round_airplay_24" />

            <ImageView
                android:id="@+id/more1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/baseline_format_list_bulleted_24"
                app:tint="@color/black"

                />


            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/latobold"
                android:text="Download" />

            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/latobold"
                android:text="Edit" />

            <TextView
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/latobold"
                android:text="Print" />

            <TextView
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/latobold"
                android:text="More" />


        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>